<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4edef"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/login_cloud" />

        <ImageView
            android:layout_width="93dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/login_cloud" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="124dp"
            android:layout_height="125dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:src="@drawable/login_logo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen48"
        android:gravity="center|center_horizontal">

        <FrameLayout
            android:id="@+id/ll_first_login"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center|center_horizontal">

                <com.quyenlx.learningjapanese.customview.FButton
                    android:id="@+id/fragment_flash_btn_login"
                    android:layout_width="@dimen/dimen270"
                    android:layout_height="@dimen/dimen56"
                    android:layout_marginTop="@dimen/dimen20"
                    android:minHeight="56dp"
                    android:minWidth="@dimen/demo_button_min_width"
                    android:text="@string/register"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimens18"
                    android:textStyle="bold"
                    fbutton:buttonColor="@color/colorPrimary"
                    fbutton:cornerRadius="7dp"
                    fbutton:shadowColor="@color/colorPrimaryDark"
                    fbutton:shadowEnabled="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_login_first" />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_register"
        android:layout_width="@dimen/dimen270"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen11"
        android:gravity="center_horizontal"
        android:text="Đăng ký một tài khoản"
        android:textColor="@color/color333333"
        android:textSize="@dimen/dimens16" />


    <com.quyenlx.learningjapanese.customview.FButton
        android:id="@+id/fragment_flash_btn_change_data"
        android:layout_width="@dimen/dimen270"
        android:layout_height="@dimen/dimen56"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen60"
        android:minWidth="@dimen/dimen56"
        android:text="@string/Login"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimens16"
        android:textStyle="bold"
        fbutton:buttonColor="@color/colorPrimary"
        fbutton:cornerRadius="7dp"
        fbutton:shadowColor="@color/colorPrimaryDark"
        fbutton:shadowEnabled="true" />

    <TextView
        android:layout_width="@dimen/dimen270"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen11"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/dimen6"
        android:paddingLeft="@dimen/dimen10"
        android:paddingRight="@dimen/dimen10"
        android:text="Sử dụng tài khoản đã được đăng ký để đăng nhập"
        android:textColor="@color/color333333"
        android:textSize="@dimen/dimens14" />
</LinearLayout>