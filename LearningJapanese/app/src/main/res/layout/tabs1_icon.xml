<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:gravity="center|top"

    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lbl"
            android:layout_width="43dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/tab_icon"
                        android:layout_width="match_parent"
                        android:layout_height="26dp"
                        android:src="@drawable/tabbar_member_seletected" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="@dimen/txtnotify_wh"
                    android:layout_height="@dimen/txtnotify_wh"
                    android:layout_alignParentRight="true"
                    >

                    <TextView
                        android:id="@+id/txtnotify"
                        android:layout_width="@dimen/txtnotify_wh"
                        android:layout_height="@dimen/txtnotify_wh"
                        android:background="@drawable/circle"
                        android:gravity="center"
                        android:text="11"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtnotify_size"
                        android:visibility="gone" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="家族"
            android:textColor="#777777"
            android:textSize="@dimen/dimens10" />

    </LinearLayout>

</LinearLayout>